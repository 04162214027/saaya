<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Professional Dark Theme -->
    <style name="Theme.Saaya" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_black</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_black</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_grey</item>
        
        <!-- Action Bar -->
        <item name="actionBarStyle">@style/Saaya.ActionBar</item>
    </style>
    
    <style name="Saaya.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/surface_dark</item>
        <item name="titleTextStyle">@style/Saaya.ActionBar.Title</item>
    </style>
    
    <style name="Saaya.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">20sp</item>
    </style>
    
</resources>
